@model CYJ.Models.ABOUT

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_mytemplate.cshtml";
}

<h2>Edit Post</h2>

@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <h4>ABOUT</h4>
        <hr />
        @Html.HiddenFor(model => model.AboutInfo)

        <div class="form-group">
            @Html.LabelFor(model => model.AboutInfo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AboutInfo, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to About Page", "Home")
</div>
