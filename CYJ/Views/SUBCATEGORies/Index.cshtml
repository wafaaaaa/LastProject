    Layout = "~/Views/Shared/_mytemplate.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.subcategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CATEGORY.categoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
